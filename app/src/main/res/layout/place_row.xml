<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagePlace"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/place_image"
         />

    <TextView
        android:id="@+id/namePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:text="Dublin Castle"
        app:layout_constraintTop_toBottomOf="@+id/imagePlace"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="43dp" />

    <TextView
        android:id="@+id/countyPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Co. Dublin"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginEnd="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/imagePlace"
        app:layout_constraintEnd_toEndOf="@id/imagePlace"
        app:layout_constraintTop_toTopOf="@+id/imagePlace" />

</androidx.constraintlayout.widget.ConstraintLayout>